<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:src="@drawable/img_hot" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img1"
                android:src="@drawable/img_fl" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img1"
                android:src="@drawable/img_pl" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img2"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img3"
                android:src="@drawable/img_world" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img3"
                android:src="@drawable/img_at" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img4"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img5"
                android:src="@drawable/img_tt" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img5"
                android:src="@drawable/img_sk" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img6"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img7"
                android:src="@drawable/img_gt" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img7"
                android:src="@drawable/img_dl" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/img8"
                android:layout_toRightOf="@id/img9"
                android:src="@drawable/img_cn" />

            <ImageView
                android:id="@+id/img11"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/img10"
                android:src="@drawable/img_tti" />

            <ImageView
                android:id="@+id/img12"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/img10"
                android:layout_toRightOf="@id/img11"
                android:src="@drawable/img_ty" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>